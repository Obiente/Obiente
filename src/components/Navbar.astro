<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navSection = document.querySelector(".group") as HTMLElement;

    if (navSection) {
      navSection.addEventListener("mousemove", (e: MouseEvent) => {
        const rect = navSection.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;

        navSection.style.setProperty("--mouse-x", `${x}%`);
        navSection.style.setProperty("--mouse-y", `${y}%`);
      });
    }
  });
</script>
