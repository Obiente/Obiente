---
const { name, image, description } = Astro.props as {
    name: string,
    image: string,
    description: string,
};
---

<div class="flex flex-col gap-y-5 bg-gray-100/5 backdrop-blur-sm border border-gray-300/10 rounded-2xl p-6 hover:bg-gray-100/10 hover:border-gray-300/20 transition-all duration-300 overflow-hidden">
    <img src={image} alt={name} class="w-16 h-16 rounded-full" />
    <div>
        <h3 class="text-xl font-semibold text-gray-100 mb-2">{name}</h3>
        <p class="text-gray-100/75">{description}</p>
    </div>
</div>