---
import Typography from "./Typography.astro";
import Card from "./Card.astro";

export interface Props {
  name: string;
  image: string;
  description: string;
  role: string;
}

const { name, image, description, role } = Astro.props as Props;
---

<Card class="flex flex-col">
  <img
    src={image}
    alt={`${name} profile`}
    class="w-20 h-20 rounded-full mb-6 group-hover:scale-105 transition-transform duration-300"
  />
  <div class="flex flex-col justify-between flex-1 gap-6">
    <span>
      <Typography as="h3" variant="subheading">{name}</Typography>
      <Typography variant="small">{description}</Typography>
    </span>
    <Typography
      variant="small"
      class="bg-gray-100/10 w-fit text-nowrap px-3 py-2 rounded-full"
    >
      {role}
    </Typography>
  </div>
</Card>
