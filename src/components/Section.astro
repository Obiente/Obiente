---
// Define section spacing types for better autocomplete
type SectionSpacing = 'sm' | 'md' | 'lg' | 'xl';

export interface Props {
  id?: string;
  class?: string;
  spacing?: SectionSpacing;
}

const { 
  id, 
  class: className = '', 
  spacing = 'lg'
} = Astro.props as Props;

// Use const assertion and satisfies for better type inference
const spacings = {
  sm: 'py-12',
  md: 'py-16', 
  lg: 'py-20',
  xl: 'py-24'
} as const satisfies Record<SectionSpacing, string>;
---

<section id={id} class={`px-8 ${spacings[spacing]} ${className}`}>
  <slot />
</section>
