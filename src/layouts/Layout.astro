---
import "../global.css";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Obiente - Open source tools that prioritize users instead of profits",
  description = "O bien, te respalda Obiente. We build completely free, open-source software that actually serves users instead of shareholders. From distributed monitoring to UI components, our community-driven tools solve real problems without hidden costs or vendor lock-in.",
  image = "/image.png",
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : Astro.url;
const socialImageURL = Astro.site ? new URL(image, Astro.site) : image;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:site_name" content="Obiente" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Obiente" />
    <meta
      name="keywords"
      content="obiente, open source, free software, community driven, AGPL license, distributed monitoring, ui components, alternative to corporate tools"
    />

    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link rel="preconnect" href="https://fonts.bunny.net" crossorigin />
  </head>
  <body>
    <slot />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Obiente",
        "description": "O bien, te respalda Obiente. Open source tools that prioritize users over profits.",
        "url": "https://obiente.com",
        "logo": "https://obiente.com/image.png",
        "sameAs": ["https://github.com/Obiente"],
        "contactPoint": {
          "@type": "ContactPoint",
          "email": "support@obiente.com"
        }
      }
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    background: #030712;
    width: 100%;
    height: 100%;
  }
</style>
